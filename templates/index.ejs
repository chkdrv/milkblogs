<!doctype html>
<html>
  <head>
    <title><%= blog_title %></title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div id="container">
    <h1><%= blog_title %></h1>
    <% for(var i=all_posts.length; i>0; i--){ %>
      <div class="post-box">
        <h4 class="post_title"><a href="post/<%= all_posts[i-1].hash %>?name=<%= encodeURI(all_posts[i-1].title) %>"><%= all_posts[i-1].title %></a></h4>
        <p class="datetext"><%= all_posts[i-1].date %></p>
        <p><%= all_posts[i-1].small %></p>
      </div>
    <% } %>
    </div>
  </body>
</html>
