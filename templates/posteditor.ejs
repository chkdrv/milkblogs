<!doctype html>
<html>
  <head>
    <title>Milkblogs Control Panel</title>
    <link rel="stylesheet" href="../../style.css">
  </head>
  <body>
    <div id="container">
      <h1 class="title"><a href="/control-panel/">Milkblogs Control Panel</a></h1>
      <%# if its a new post, change the url we send to %>
      <% if(new_post) { %>
        <form action="/fs/savepost?new=yes" method="post">
      <% } else { %>
        <form action="/fs/savepost?new=no" method="post">
      <% } %>

        <div class="cp-form-item">
          <label for="editor-title">Post Title:</label>
          <input name="title" type="text" id="editor-title" value="<%= post_title %>">
        </div>

        <%# If its a new post, they won't want to delete it %>
        <% if(!new_post) { %>
        <div class="cp-form-item">
          <label>Delete Post?</label>
          <input type="checkbox" name="delpost" value="yes">
        </div>
        <% } %>

        <div class="cp-form-item">
          <label>Enter Secret (for security)</label>
          <input name="secret" type="password">
        </div>

        <!-- DO NOT TOUCH (this indicates the hash of the post to edit) -->
        <input name="hash" type="hidden" value="<%= hash %>" placeholder="autogenerated" readonly>
        <textarea name="content" class="cp-posteditarea"><%= post_content %></textarea>
        <input type="submit" value="Publish">
      </form>
    </div>
  </body>
</html>
