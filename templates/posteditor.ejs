<!doctype html>
<html>
  <head>
    <title>Milkblogs Control Panel</title>
    <link rel="stylesheet" href="../../style.css">
  </head>
  <body>
    <div id="container">
      <h1><a href="/control-panel/">Milkblogs Control Panel</a></h1>
      <form action="/fs/savepost" method="post">
        <label for="editor-title">Post Title:</label>
        <input name="title" type="text" id="editor-title" value="<%= post_title %>">
        <label>Post Hash:</label>
        <input name="hash" type="text" value="<%= hash %>" placeholder="autogenerated" readonly>
        <label>New Post?</label>
        <input type="checkbox" name="newpost" value="yes">
        <textarea name="content" class="cp-posteditarea"><%= post_content %></textarea>
        <input type="submit" value="Publish">
      </form>
    </div>
  </body>
</html>
